<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="664.0" prefWidth="446.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="business.UserRegisterController">
    <VBox alignment="CENTER" layoutX="112.0" layoutY="46.0" spacing="15" style="-fx-background-color: white; -fx-padding: 20px; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0.5, 0, 0);">
        
        <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;" text="Registro de Usuario" />
        
        <!-- Campo de ID de Usuario -->
        <VBox alignment="CENTER_LEFT" spacing="5" style="-fx-padding: 10px;">
            <Label style="-fx-text-fill: #555555; -fx-font-weight: bold;" text="ID del Usuario:" />
            <TextField fx:id="tfUserID" promptText="Ingrese su ID de usuario" style="-fx-background-color: #f0f0f0; -fx-border-radius: 5px; -fx-background-radius: 5px;" />
        </VBox>
        
        <!-- Campo de Contraseña -->
        <VBox alignment="CENTER_LEFT" spacing="5" style="-fx-padding: 10px;">
            <Label style="-fx-text-fill: #555555; -fx-font-weight: bold;" text="Contraseña:" />
            <PasswordField fx:id="tfPassword" promptText="Ingrese su contraseña" style="-fx-background-color: #f0f0f0; -fx-border-radius: 5px; -fx-background-radius: 5px;" />
        </VBox>
        
        <!-- ComboBox de Tipo de Usuario -->
        <VBox alignment="CENTER_LEFT" spacing="5" style="-fx-padding: 10px;">
            <Label style="-fx-text-fill: #555555; -fx-font-weight: bold;" text="Tipo de Usuario:" />
            <ComboBox fx:id="cbType" promptText="Seleccione un tipo" style="-fx-background-color: #f0f0f0; -fx-border-radius: 5px; -fx-background-radius: 5px;" />
        </VBox>
        
        <!-- Sección para Foto de Perfil -->
        <VBox alignment="CENTER" spacing="5" style="-fx-padding: 10px;">
            <Label style="-fx-text-fill: #555555; -fx-font-weight: bold;" text="Foto de Perfil:" />
            <ImageView fx:id="photoPreview" fitHeight="100" fitWidth="100" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.15), 5, 0.2, 0, 1);" />
            <Button fx:id="btnSelectPhoto" onAction="#handleSelectPhoto" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5px;" text="Adjuntar Foto" />
        </VBox>
        
        <!-- Botón para Registrar Usuario -->
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10px;">
            <Button fx:id="btnRegister" onAction="#handleRegister" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5px; -fx-padding: 8px 16px;" text="Registrar" />
        </HBox>
    </VBox>
</AnchorPane>
