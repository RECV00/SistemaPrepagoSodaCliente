<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="business.UIServiceRequestController">
    <children>
        <!-- Título -->
        <Label text="Servicio de Solicitud de Alimentos" layoutX="20.0" layoutY="10.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        
        <!-- Selección de Estudiante -->
        <Label text="Estudiante:" layoutX="20.0" layoutY="50.0" />
        <ComboBox fx:id="cbEstudiante" layoutX="100.0" layoutY="50.0" prefWidth="200.0" />

        <!-- Selección del Día de Reservación -->
        <Label text="Día de Reservación:" layoutX="20.0" layoutY="100.0" />
        <ComboBox fx:id="cbDiaReservacion" layoutX="150.0" layoutY="100.0" prefWidth="150.0" />

        <!-- Selección de Horario (Desayuno o Almuerzo) -->
        <Label text="Horario:" layoutX="20.0" layoutY="150.0" />
        <ToggleGroup fx:id="horarioGroup" />
        <RadioButton fx:id="rbDesayuno" text="Desayuno" layoutX="100.0" layoutY="150.0" toggleGroup="$horarioGroup" />
        <RadioButton fx:id="rbAlmuerzo" text="Almuerzo" layoutX="200.0" layoutY="150.0" toggleGroup="$horarioGroup" />

        <!-- Tabla de Platos -->
        <TableView fx:id="tableDishes" layoutX="20.0" layoutY="200.0" prefHeight="200.0" prefWidth="400.0">
            <columns>
                <TableColumn fx:id="colAlimento" text="Alimento" prefWidth="200.0" />
                <TableColumn fx:id="colPrecio" text="Precio" prefWidth="100.0" />
                <TableColumn fx:id="colSolicitar" text="Seleccionar" prefWidth="100.0" />
            </columns>
        </TableView>

        <!-- Botones -->
        <Button fx:id="bAgregarAlimento" text="Cargar Platos" layoutX="20.0" layoutY="420.0" onAction="#loadDishes" />
        <Button fx:id="bRegresar" text="Regresar" layoutX="120.0" layoutY="420.0" onAction="#confirmPurchase" />
    </children>
</AnchorPane>